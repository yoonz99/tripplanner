<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/day_cell_ll_background"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FFFFFF" >
    
	<ImageView 
	    android:id="@+id/day_mark"
	    android:layout_width="35dp"
	    android:layout_height="35dp"
	    android:layout_gravity="center"
	    android:visibility="gone"
	   />
	
    <TextView
        android:id="@+id/day_cell_tv_day"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="top"
        android:paddingLeft="2dp"
        android:textSize="14dip" />

    <TextView
        android:id="@+id/memo" android:layout_gravity="center" android:textColor="#808080"
        android:layout_width="30dip" 
        android:layout_height="30dip" android:textSize="9dip" android:maxLines="2"
        android:gravity="center"
     />

</FrameLayout>